{
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "prettier": "^3.3.1",
    "prettier-plugin-jinja-template": "^1.4.0",
    "prettier-plugin-tailwindcss": "^0.6.2",
    "tailwindcss": "^3.4.3"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jinja-template",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": ["*.html"],
        "options": {
          "parser": "jinja-template"
        }
      }
    ]
  }
}
